# Sample /etc/logrotate.d/suricata configuration file.
@e_logdir@*.log @e_logdir@*.json @e_logdir@*.json.[^.] {
    daily
    missingok
    rotate 5
    compress
    delaycompress
    minsize 500k
    sharedscripts
    postrotate
        /bin/kill -HUP `cat @e_rundir@suricata.pid 2> /dev/null` 2> /dev/null || true
    endscript

    # If using threaded Eve output, it is best to move old logs to
    # their own directory. But it also works fine when not usint
    # threaded Eve log.
    olddir @e_logdir@/old
    createolddir
}
